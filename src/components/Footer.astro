---
import { Image } from "astro:assets";
import Container from "./Container.astro";
import logo from "../images/transparent-logo.svg";

const menus = [
    {
        head: 'Company',
        links: [
            {
            label: 'Pricing',
            href: '/#pricing'
            },
            {
            label: 'Contact',
            href: '/contact/'
            },
            {
            label: 'Get Started',
            href: '/#pricing'
            },
            {
            label: 'FAQs',
            href: '/#faqs'
            },
            {
            label: 'Blog',
            href: '/blog/'
            },
            {
            label: 'Client Login',
            href: 'https://billing.stripe.com/p/login/3cseXE1z46QYcLe5kk'
            },
        ]
    },
    {
        head: 'Legal',
        links: [
            {
            label: 'Terms & Conditions',
            href: '/terms-and-conditions/'
            },
            {
            label: 'Privacy Policy',
            href: '/privacy-policy/'
            }
        ]
    },
]
---

<footer class="footer">
    <div class="footer_upper">
        <Container type="footer-inner">
            <div class="footer_logo">
                <Image src={logo} alt="Futuremerce logo" />
                <p>All your shopify development needs for one monthly fee.</p>
                <div class="footer_socials">
                    <a href="https://twitter.com/futuremerce" aria-label="Twitter" title="Twitter"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect width="24" height="24" fill="url(#pattern0)"/><defs><pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                        <use xlink:href="#image0_366_2" transform="scale(0.0104167)"/></pattern><image id="image0_366_2" width="96" height="96" xlink:href="data:image/png;base64,"/>
                        </defs></svg>
                    </a>
                    <a href="https://www.linkedin.com/company/futuremerce/" aria-label="LinkedIN" title="LinkedIn"><svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect width="28" height="28" fill="url(#pattern1)"/><defs><pattern id="pattern1" patternContentUnits="objectBoundingBox" width="1" height="1">
                        <use xlink:href="#image0_366_3" transform="scale(0.0104167)"/></pattern><image id="image0_366_3" width="96" height="96" xlink:href="data:image/png;base64,"/>
                        </defs></svg>
                    </a>
                    <a href="mailto:hello@futuremerce.co" aria-label="Email" title="Email"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect width="24" height="24" fill="url(#pattern2)"/><defs><pattern id="pattern2" patternContentUnits="objectBoundingBox" width="1" height="1">
                        <use xlink:href="#image0_356_3" transform="scale(0.0104167)"/></pattern><image id="image0_356_3" width="96" height="96" xlink:href="data:image/png;base64,"/>
                        </defs></svg>
                    </a>
                </div>
            </div>
            <div class="footer_menus">
                {
                    menus.map(menu => <div class="footer_menu">
                        <h6 class="footer_menu-head">{menu.head}</h6>
                        {menu.links.map(link => <a href={link.href} class="footer_menu-link" title={link.label}>{link.label}</a>)}
                    </div>)
                }
            </div>
        </Container>
    </div>
    <div class="footer_lower">
        <Container>
            <p class="footer_text">&copy; <span id="year"></span> Futuremerce. All rights reserved.</p>
        </Container>
    </div>
</footer>

<script is:inline>
    document.getElementById('year').textContent = new Date().getFullYear();
    document.querySelectorAll('.footer_menu-link').forEach(link => {
        link.addEventListener('click', function(e) {
            dataLayer.push({
                event: 'link_click',
                link_text: e.target.textContent,
                link_url: e.target.href,
            });
        });
    });
</script>

<style lang="scss">
    .footer {
        margin-top: 150px;

            @media screen and (max-width: 450px) {
                margin-top: 75px;
            }

        &_logo {

            @media screen and (max-width: 767px) {   
                img {
                    margin: 0 auto;
                    display: block;
                    width: 227px;
                }
            }

            > p {
                margin-top: 13px;
                color: #000;
                font-size: 14px;
                font-style: normal;
                font-weight: 400;
                line-height: 24px; 
                max-width: 340px;

                @media screen and (max-width: 767px) {
                    text-align: center; 
                }
            }
        }

        &_socials {
            margin-top: 42px;
            display: flex;
            align-items: center;
            gap: 12px;
            opacity: .6;

            @media screen and (max-width: 767px) {
                justify-content: center;
                margin-top: 30px;
            }

            a {
                text-decoration: none;
                color: #000;
            }
        }

        &_menus {
            display: flex;
            align-items: flex-start;
            column-gap: 90px;

            @media screen and (max-width: 767px) {
                flex-direction: column;
                row-gap: 46px;
                align-items: center;
            }
        }

        &_menu {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;

            @media screen and (max-width: 767px) {
                align-items: center;
                text-align: center;
            }

            &-head {
                color: #000;
                font-size: 18px;
                font-style: normal;
                font-weight: 700;
                line-height: 24px;
                margin-bottom: 4px;
            }

            &-link {
                color: #000;
                font-size: 14px;
                font-style: normal;
                font-weight: 400;
                line-height: 24px;
                text-decoration: none;
            }
        }

        &_lower {
            margin-top: 50px;
            background: rgba(0, 0, 0, 0.03);
            padding: 15px 0;
        }

        &_text {
            color: #000;
            text-align: center;
            font-size: 14px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px; 

            br {
                display: none;

                @media screen and (max-width: 767px) {
                    display: block;
                }
            }
        }
    }
</style>