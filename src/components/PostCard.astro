---
interface Props {
    post: any;
    hidden?: boolean;
}

const { post, hidden = false } = Astro.props as Props;
---

<a class={`post ${hidden ? 'hidden' : ''}`} href={`/posts/${post.frontmatter.slug}`} data-category={post.frontmatter.category}>
    <img src={`/post-thumbnails/${post.frontmatter.slug}.webp`} alt={post.frontmatter.title} class="post_image" loading="lazy"/>
    <span class="post_badge">{post.frontmatter.category}</span>
    <h4 class="post_title">{post.frontmatter.title}</h4>
    <p class="post_excerpt">{post.frontmatter.excerpt}</p>
    <span class="post_cta">Read More</span>
</a>

<style lang="scss">
    .post {
        text-decoration: none;
        width: 100%;
        border-radius: 12px;
        background: #FFF;
        box-shadow: 0px 0px 50px 0px rgba(0, 0, 0, 0.05);
        padding-bottom: 45px;
        display: flex;
        flex-direction: column;
        transition: .35s ease-in-out ;
        overflow: hidden;

        &.hidden {
            display: none;
        }

        &:hover {
        box-shadow: 0px 0px 60px 0px rgba(0, 0, 0, 0.25);
        }

        &_image {
            width: 100%;
            border-radius: 12px 12px 0px 0px;
            height: 220px;
            margin-top: -50px;
        }

        &_badge {
            margin: 22px 20px;
            border-radius: 99px;
            background: rgba(232, 229, 255, 0.47);
            padding: 2px 13px;
            color: var(--lighter-purple);
            font-size: 13px;
            font-style: normal;
            font-weight: 500;
            line-height: normal;
            display: block;
            width: fit-content;
        }

        &_title {
            color: #434343;
            font-size: 20px;
            font-style: normal;
            font-weight: 600;
            line-height: 26px; 
            padding: 0 20px;
            text-transform: capitalize;
        }

        &_excerpt {
            margin: 20px 0;
            padding: 0 20px;
            color: #838383;
            font-size: 15px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px; 
        }

        &_cta {
            margin-left: 20px;
            display: block;
            width: fit-content;
            border-radius: 99px;
            border: 1px solid rgba(74, 58, 255, 0.19);
            background: #E8E5FF;
            padding: 5px 24px;
            color: var(--lighter-purple);
            font-size: 14px;
            font-style: normal;
            font-weight: 500;
            line-height: normal;
            margin-top: auto;
        }
    }
</style>