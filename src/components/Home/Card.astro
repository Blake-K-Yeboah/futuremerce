---
interface Item {
    icon: string;
    title: string;
    text: any;
}

interface Props {
    item: Item;
}

const {icon, title, text} = Astro.props.item;

---

<article class="card">
    <img src={icon} class="card_icon">
    <h4 class="card_title">{title}</h4>
    <p class="card_text">{text}</p>
</article>

<style lang="scss">
    .card {
        width: calc((100% - 80px) / 3);
        flex: 0 0 calc((100% - 80px) / 3);
        height: auto;
        padding: 32px 16px 38px;
        border-radius: 12px;
        background: #FFF;
        box-shadow: 0px 0px 50px 0px rgba(0, 0, 0, 0.06);
        display: flex;
        flex-direction: column;
        align-items: center;

        @media screen and (max-width: 942px) {
            width: calc((100% - 40px) / 2);
            flex: 0 0 calc((100% - 40px) / 2);
            padding: 24px 14px 28px;
        }

            @media screen and (max-width: 710px) {
                width: 100%;
                flex: 0 0 100%;
            }

        &_icon {
            width: 59px;
            height: 59px;
        }

        &_title {
            margin: 6px 0 10px 0;
            color: #575757;
            text-align: center;
            font-size: 24px;
            font-style: normal;
            font-weight: 700;
            line-height: 50px; 

            @media screen and (max-width: 942px) {
                font-size: 20px;
                line-height: 40px;
            }
        }

        &_text {
            color: #363636;
            text-align: center;
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px;

            @media screen and (max-width: 942px) {
                font-size: 15px;
                line-height: 22px;
            }
        }
    }
</style>

<script>
    document.querySelectorAll('.card_text').forEach(item => {
        item.innerHTML = item.textContent;
    })
</script>