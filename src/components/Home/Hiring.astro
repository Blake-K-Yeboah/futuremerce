    &_grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 29px;
        margin-top: 53px;
        max-width: 1050px;
    }

    &_box {
        padding: 24px;
        border-radius: 12px;
        background: #FFF;
        box-shadow: 0px 0px 50px 0px rgba(0, 0, 0, 0.05);

        &-title {
            color: #434343;
            font-size: 22px;
