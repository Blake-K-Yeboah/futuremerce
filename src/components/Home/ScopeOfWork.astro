---
import Container from '../Container.astro';

const services = [
    {
        title: `Feature Board`,
        text: `Add as many feature request to your board as youâ€™d like`,
    },
    {
        title: `Lightning Fast Delivery`,
        text: `Get your development work one at a time in just a few days on average`,
    },
    {
        title: `Top-notch quality`,
        text: `High quality development at your finger tips whenever you need it.`,
    },
    {
        title: `Fixed monthly rate`,
        text: `No surprises here! Pay the same fixed price each month.`,
    },
    {
        title: `Flexible`,
        text: `Pause or cancel at anytime you want, so you only pay for time actually used`,
    },
    {
        title: `Done For You`,
        text: `Set it and forget it. No needed extra management`,
    },
]
---
<section class="scope-of-work">
    <Container>
        <h2 class="scope-of-work_title">Membership <span>Benefits</span></h2>
        <p class="scope-of-work_text">Perks so good you'll never need to go anywhere else for your coding needs. Seriously</p>
        <div class="scope-of-work_grid">
            {services.map((service, i) => { return <div class="scope-of-work_grid-item">
                    <img src={`/Icons/scope-of-work/icon-${i + 1}.svg`} alt="">
                    <h3 class="scope-of-work_grid-item-title">{service.title}</h3>
                    <p class="scope-of-work_grid-item-text">{service.text}</p>
                </div>
            })}
        </div>
    </Container>
</section>

<style lang="scss">
    .scope-of-work {
        margin: 124px 0 0 0;
        
            @media screen and (max-width: 710px) {
                margin-top: 165px;
            }

        &_title {
            color: #434343;
            text-align: center;
            font-size: 42px;
            font-style: normal;
            font-weight: 700;
            line-height: 50px;
            max-width: 545px;
            margin: 0 auto 24px auto;

            > span {
                color: var(--lighter-purple);
            }

            @media screen and (max-width: 942px) {
                font-size: 32px;
                line-height: 40px;
            }

            
            @media screen and (max-width: 450px) {
                font-size: 26px;
                line-height: 32px;
                margin-bottom: 45px;
            }
        }

        &_text {
            color: #434343;
            text-align: center;
            font-size: 18px;
            font-style: normal;
            font-weight: 400;
            line-height: 26px;
            max-width: 436px;
            margin: 0 auto 80px;
            
            @media screen and (max-width: 942px) {
                font-size: 16px;
            }
        }

        img {
            width: 100%;
            height: auto;
        }

        &_grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            max-width: 1176px;
            margin: 0 auto;
            gap: 68px 42px;
            
            @media screen and (max-width: 942px) {
                grid-template-columns: 1fr 1fr;
            }

            @media screen and (max-width: 710px) {
                grid-template-columns: 1fr;
                max-width: 400px;
                row-gap: 44px;
            }

            &-item {
                width: 100%;
                display: flex;
                flex-direction: column;
                align-items: center;

                img {
                    width: 87px;
                    height: 87px;
                }

                &-icon {
                    width: 87px;
                    height: 87px;
                    background:var(--lighter-purple); 
                    border-radius: 50%;
                    display: flex;
                    justify-content: center;
                    align-items: center;
            
                    @media screen and (max-width: 450px) {
                        transform: scale(.75);
                    }

                    > div {
                        background:var(--lighter-purple); 
                        border: 4px solid white;
                        border-radius: 50%;
                        position: relative;
                        width: 77px;
                        height: 77px;

                        img {
                            width: 56px;
                            height: 56px;
                            position: absolute;
                            left: 50%;
                            top: 50%;
                            transform: translate(-50%, -50%);
                        }
                    }
                }

                &-title {
                    margin: 12px 0;
                    color: #575757;
                    text-align: center;
                    font-size: 24px;
                    font-weight: 700;
                    line-height: 32px;
            
                    @media screen and (max-width: 450px) {
                        font-size: 20px;
                        line-height: 28px;
                        margin-top: 6px;
                    }
                }

                &-text {
                    color: #363636;
                    text-align: center;
                    font-size: 16px;
                    font-weight: 400;
                    line-height: 24px; 
            
                    @media screen and (max-width: 450px) {
                        font-size: 14.5px;
                        line-height: 26px;
                    }
                }
            }
        }
    }
</style>