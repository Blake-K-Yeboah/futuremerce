---
import Layout from '../../layouts/Layout.astro';
import AuditHeader from '../../components/Audit/AuditHeader.astro';
import Process from '../../components/Audit/Process.astro';
import Pricing from '../../components/Home/Pricing.astro';
import FAQs from '../../components/Home/FAQs.astro';
import LatestNews from '../../components/Home/LatestNews.astro';

const schemaMetaInfo = `
<meta itemprop="name" content="Futuremerce - Discover How to Boost Sales and Conversions">
<meta itemprop="description" content="A Futuremerce audit includes a SEO audit, conversion review as well as a technical audit to find key issues in your store that are hurting it's conversion rate and performance.">
<meta itemprop="image" content="/overview.png">
`;
---

<Layout title="Boost your store's conversion rate and performance with a Futuremerce Audit" metaInfo={{ schemaMetaInfo, canonical: "https://www.futuremerce.com/audits", description: "Is your ecommerce store not performing as well as you'd hoped? You're not alone. Many businesses struggle to identify areas for improvement and unlock their store's full potential. That's where we come in. At Futuremerce, we offer audits to help identify critical issues, gain valuable insights and make data-driven decisions." }} >
	<AuditHeader />
    <Process />
    <Pricing isAudit={true} />
    <FAQs isAudit />
    <LatestNews />
</Layout>

<script>
    document.body.classList.add('audits-page');
</script>