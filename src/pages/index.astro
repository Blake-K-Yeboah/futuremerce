---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Home/Header.astro';
import RecentBrands from '../components/Home/RecentBrands.astro';
import Hiring from '../components/Home/Hiring.astro';
import Process from '../components/Home/Process.astro';
import Testimonial from '../components/Home/Testimonial.astro';
import TextGrids from '../components/Home/TextGrids.astro';
import TextBanner from '../components/Home/TextBanner.astro';
import ScopeOfWork from '../components/Home/ScopeOfWork.astro';
import Pricing from '../components/Home/Pricing.astro';
import FAQs from '../components/Home/FAQs.astro';
import LatestNews from '../components/Home/LatestNews.astro';
import CallToAction from '../components/CallToAction.astro';

const schemaMetaInfo = `
<meta itemprop="name" content="Futuremerce - Shopify development as a subscription">
<meta itemprop="description" content="Streamline Your Shopify Success with a Development Plan. We replace unreliable freelancers and expensive agencies with a simple, subscription service.">
<meta itemprop="image" content="/overview.png">
`;
---

<Layout title="Futuremerce - Shopify Development as a Subscription" metaInfo={{ schemaMetaInfo, canonical: "https://www.futuremerce.com/", description: "Streamline Your Shopify Success with a Development Plan. We replace unreliable freelancers and expensive agencies with a simple, subscription service." }} >
	<Header />
	<RecentBrands />
	<Hiring />
	<Process />
	<Testimonial />
	<TextGrids />
	<TextBanner />
	<ScopeOfWork />
	<Pricing />
	<FAQs />
	<CallToAction />
	<LatestNews />
</Layout>

<style is:inline>
/* Fix CTA Buttons */
.call-to-action_btns {
    gap: 16px;
  }
  
  .call-to-action_btns > a:first-of-type {
    color: var(--lighter-purple);
    background: #fff;
  }
  
  .call-to-action_btns > a:last-of-type {
    color: #fff;
    background: rgba(255,255,255,.19);
  }
</style>
