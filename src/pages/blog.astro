---
import Breadcrumbs from '../components/Breadcrumbs.astro';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Blog/Hero.astro';
import Articles from '../components/Blog/Articles.astro';
import CallToAction from '../components/CallToAction.astro';

const links = [
    {
        label: 'Home',
        href: '/'
    },
    {
        label: 'Blog'
    }
]

const schemaMetaInfo = `
<meta itemprop="creator" content="Futuremerce">
<meta itemprop="name" content="Futuremerce">
<meta itemprop="description" content="Discover valuable tips and strategies for optimizing your store to thrive in today’s competitive landscape.">
<meta itemprop="image" content="/overview.png">
`;
---

<Layout title="Futuremerce - Tips & Strategies to help your store grow" metaInfo={{ schemaMetaInfo, canonical: "https://www.futuremerce.com/blog", itemType: "http://schema.org/Blog", description: "Discover valuable tips and strategies for optimizing your store to thrive in today’s competitive landscape." }}>
    <Breadcrumbs links={links} />
    <Hero />
    <Articles />
    <CallToAction />
</Layout>